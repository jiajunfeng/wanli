{
  "appenders": [
     {
      "type": "file",
      "filename": "./logs/http-logger.log",
      "maxLogSize": 204800,
      "backups": 3,
      "category": "http-logger"
    },
    {
          "type": "file",
          "filename": "./logs/push_logger.log",
          "maxLogSize": 204800,
          "backups": 3,
          "category": "push-logger"
      },
    {
      "type": "file",
      "filename": "./logs/relative-logger.log",
      "maxLogSize": 204800,
      "backups": 3,
      "category": "relative-logger"
    },
    {
      "type": "file",
      "absolute": true,
      "filename": "./logs/absolute-logger.log",
      "maxLogSize": 204800,
      "backups": 10,
      "category": "absolute-logger"          
    }
  ],
  "levels": {
	"http-logger" : "ERROR",
	"push-logger" : "DEBUG",
    "relative-logger" : "DEBUG",
	"absolute-logger" : "ERROR"
  }
}